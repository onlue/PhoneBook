void __fastcall TForm4::Image1Click(TObject *Sender)
{
	Image2->Picture->LoadFromFile("Theme1BG.png");
		Form3->Panel1->Font->Color = clWhite;
		Form3->Panel2->Font->Color = clWhite;
		Panel1->Font->Color = clWhite;
		Form2->Image1->Picture->LoadFromFile("Theme1BG.png");
		Form2->Label2->Font->Color = clWhite;
		Form2->DBCtrlGrid1->Color = clPurple;
		Form2->DBCtrlGrid1->SelectedColor = StringToColor("$00FF80FF");
		Form3->Image1->Picture->LoadFromFile("Theme1BG.png");                    //Для более быстрой перевести картинку в пнг
		Form1->Image1->Picture->LoadFromFile("Theme1BG.png");
		Form1->Label1->Font->Color = clWhite;
		Form1->Panel2->Font->Color = clWhite;
		Form1->Panel1->Font->Color = clWhite;
		Form5->Panel1->Font->Color = clWhite;
		Form5->Image1->Picture->LoadFromFile("Theme1BG.png");
		Form2->Panel2->Font->Color = clWhite;
		Form2->Panel1->Font->Color = clWhite;
		Form6->Label1->Font->Color = clWhite;
		Form6->Label2->Font->Color = clWhite;
		Form6->Image1->Picture->LoadFromFile("Theme1BG.png");
		Form6->Panel1->Font->Color = clWhite;
		Form2->Panel1->Color = clPurple;
		Form2->Panel2->Color = clPurple;
		Form7->Label1->Font->Color = clWhite;
		Form7->Label2->Font->Color = clWhite;
		Form7->Label3->Font->Color = clWhite;
		Form7->Label4->Font->Color = clWhite;
		Form7->Label5->Font->Color = clWhite;
		Form7->Label6->Font->Color = clWhite;
		Form7->Label7->Font->Color = clWhite;
		Form7->Label8->Font->Color = clWhite;
		Form7->Label9->Font->Color = clWhite;
		Form7->DBText1->Font->Color = clWhite;
		Form7->DBText2->Font->Color = clWhite;
		Form7->DBText3->Font->Color = clWhite;
		Form7->DBText4->Font->Color = clWhite;
		Form7->DBText5->Font->Color = clWhite;
		Form7->DBText6->Font->Color = clWhite;
		Form7->DBText7->Font->Color = clWhite;
		Form7->DBText8->Font->Color = clWhite;
		Form7->DBText9->Font->Color = clWhite;
		Form7->Image1->Picture->LoadFromFile("Theme1BG.png");
		 Image3->Canvas->Brush->Color=clWhite;
		Image3->Canvas->FloodFill(70,140,clWhite,fsSurface);
		Image4->Canvas->Brush->Color=clWhite;
		Image4->Canvas->FloodFill(70,140,clWhite,fsSurface);
		Form9->Image1->Picture->LoadFromFile("Theme1BG.png");
		Form9->Label1->Font->Color = clWhite;
		Form9->Label2->Font->Color = clWhite;
		Form9->Label3->Font->Color = clWhite;

}
